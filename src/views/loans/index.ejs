<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Loans</title>
</head>

<body>
    <h1>Loans | <a href="/users/logout">Logout</a></h1>
    <table>
        <thead>
            <tr>
                <th>Amount</th>
                <th>Interest Rate</th>
                <th>Term</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% loans.forEach((loan)=> { %> <tr>
                    <td>
                        <%= loan.amount %>
                    </td>
                    <td>
                        <%= loan.interestRate %>
                    </td>
                    <td>
                        <%= loan.term %>
                    </td>
                    <td>
                        <%= loan.user %>
                    </td>
                    <td>
                        <a href="/loans/<%= loan._id %>">View</a>
                        <a href="/loans/<%= loan._id %>/edit">Edit</a>
                        <a href="/loans/<%= loan._id %>/delete">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <a href="/loans/new">Create a Loan</a>
</body>

</html>